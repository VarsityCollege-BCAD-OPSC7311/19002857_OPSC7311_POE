<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BioInfoActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:background="#A7F6C6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvProfileInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter in your personal details."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtWeight"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Weight"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtHeight"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Height"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtAge"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Age"
            android:inputType="number|phone" />

        <EditText
            android:id="@+id/edtWeightGoal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Enter your weight goal"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvPrefInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="35dp"
            android:text="Please select your food preference."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rgbFoodPreference"
            android:layout_width="match_parent"
            android:layout_height="161dp">

            <RadioButton
                android:id="@+id/rbtnVeget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Vegetarian" />

            <RadioButton
                android:id="@+id/rbtnVegan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Vegan" />

            <RadioButton
                android:id="@+id/rbtnPescatarian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Pescatarian" />

            <RadioButton
                android:id="@+id/btnNoPref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="No Preference" />
        </RadioGroup>

        <Button
            android:id="@+id/btnBioInfoSubmit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="150dp"
            android:text="Submit" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>